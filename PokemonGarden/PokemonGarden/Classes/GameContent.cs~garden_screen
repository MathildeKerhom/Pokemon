using System;
using System.Collections.Generic;
using System.Linq;
using System.Text;
using System.Threading.Tasks;
using Windows.UI.Xaml.Controls;
using Windows.UI.Xaml.Media;

namespace PokemonGarden
{
	public class GameContent
	{
		private int pokemonTotal;
		private int pokemonActual;
		private int seedActual;
		private int goldActual;
		private int rewardTotal;
		private int rewardActual;
		private List<Pokemon> pokemons;
		private List<Seed> seeds;

		public GameContent()
		{
			this.pokemonTotal = 0;
			this.pokemonActual = 0;
			this.seedActual = 0;
			this.goldActual = 0;
			this.rewardTotal = 0;
			this.rewardActual = 0;
		}

		public int PokemonTotal
		{
			get
			{
				return pokemonTotal;
			}

			set
			{
				this.pokemonTotal = value;
			}
		}

		public int PokemonActual
		{
			get
			{
				return pokemonActual;
			}

			set
			{
				this.pokemonActual = value;
			}
		}

		public int SeedActual
		{
			get
			{
				return seedActual;
			}

			set
			{
				this.seedActual = value;
			}
		}

		public int GoldActual
		{
			get
			{
				return goldActual;
			}

			set
			{
				this.goldActual = value;
			}
		}

		public int RewardTotal
		{
			get
			{
				return rewardTotal;
			}

			set
			{
				this.rewardTotal = value;
			}
		}

		public int RewardActual
		{
			get
			{
				return rewardActual;
			}

			set
			{
				this.rewardActual = value;
			}
		}
	}
}
